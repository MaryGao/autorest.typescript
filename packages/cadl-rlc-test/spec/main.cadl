import "@cadl-lang/rest";

@serviceTitle("Widget Service")
namespace DemoService;
using Cadl.Http;

model Widget {
  @key id: string;
  weight: int32;
  color: "red" | "blue";
}

@error
model Error {
  code: int32;
  message: string;
}

interface WidgetService {
  @get list(): Widget[];
  @route("widgets/{id}") @get read(@path id: string): Widget;
  @post create(@body body: Widget): Widget;
  @route("customGet") @get customGet(): Widget;
}
